
<scene>

      <camera>
         <name>Camera</name>
         <position>0,0,15</position>
         <look-at>0,0,-1000</look-at>
         <clip>2,50</clip>
      </camera>

      <light>
         <name>Light</name>
         <color>1,1,1</color>
         <direction>0,0,-1</direction>
      </light>

   <graph>

      <children>
         <child>

            <name>Sword Transform</name>

             <animation>
               <name>Sword Animation</name>
               <seconds>2.5</seconds>

               <keyframes>

                 <keyframe>
                  <time>0.0</time>
                   <translation>0,0,0</translation>
                   <rotation>1,0,0,0</rotation>
                 </keyframe>

                 <keyframe>
                   <time>0.5</time>
                   <translation>0,0,0</translation>
                   <rotation>45,1,0,0</rotation>
                 </keyframe>

                 <keyframe>
                   <time>1.0</time>
                   <translation>0,0,0</translation>
                   <rotation>90,1,0,0</rotation>
                 </keyframe>

                 <keyframe>
                   <time>1.5</time>
                   <translation>0,0,3</translation>
                   <rotation>90,1,0,0</rotation>
                 </keyframe>

                 <keyframe>
                   <time>2.0</time>
                   <translation>0,0,0</translation>
                   <rotation>90,1,0,0</rotation>
                 </keyframe>

                 <keyframe>
                   <time>2.5</time>
                   <translation>0,0,0</translation>
                   <rotation>1,0,0,0</rotation>
                 </keyframe>

               </keyframes>
             </animation>

                   <translation>0,0,0</translation>
                   <rotation>1,0,0,0</rotation>
                   <scale>1,1,1</scale>

            <children>
               <child>
                  <name>Sword Entity</name>
                  <entity>
                     <name>Sword</name>
                     <mesh>Sword.mesh</mesh>
                     <material>Sword</material>
                  </entity>

                  <translation>0,0,0</translation>
                  <rotation>90,1,0,0</rotation>
                  <scale>.2,.2,.2</scale>
                  <children>
                  </children>
               </child>
            </children>

         </child>
      </children>

   </graph>
</scene>
